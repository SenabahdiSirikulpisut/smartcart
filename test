<!DOCTYPE html>
<html>
<head>
  <title>Smart Cart</title>
</head>
<body>
  <h1>Products</h1>
  <ul id="product-list"></ul>

  <script>
    const GAS_URL = "https://script.google.com/macros/s/AKfycbzNss38vumFyzma3zizjHFRBME4rhhAKz8LntC0GGD9foEKvNZZME13JMBQ3ViNSQEdkw/exec";

    // Fetch products
    fetch(GAS_URL)
      .then(res => res.json())
      .then(products => {
        const list = document.getElementById('product-list');
        products.forEach(p => {
          const li = document.createElement('li');
          li.textContent = p.Name + " - " + p.Price;
          li.addEventListener('click', () => logClick(p.Name));
          list.appendChild(li);
        });
      });

    // Log click
    function logClick(productName) {
      const data = {
        customer: "Customer_1",
        product: productName,
        timestamp: new Date().toISOString()
      };

      fetch(GAS_URL, {
        method: 'POST',
        body: JSON.stringify(data)
      }).then(res => res.json())
        .then(console.log);
    }
  </script>
</body>
</html>
